root = true

[*.{js,jsx}]
indent_style = tab
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
spaces_within_imports = true

[*.{css,pcss}]
indent_style = tab
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches the exact files either package.json or .travis.yml
[*.{json, .yml}]
indent_style = space
indent_size = 2
